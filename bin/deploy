#!/bin/sh

# Run this script to deploy the Rails app to Heroku and the Ember app to S3.

set -e

branch="$(git symbolic-ref HEAD --short)"
target="${1:-staging}"

git push "$target" "$branch:master"
heroku run rake db:migrate --remote "$target"
heroku restart --remote "$target"

cd client
ember deploy --environment "$target"
ember deploy:activate --environment "$target" --revision client:$(git rev-parse --short=7 HEAD)
