<h1>Signed into district!</h1>

<button {{action 'toggleProfile'}}>Profile</button>

{{#if showingProfile}}
  <div class='modal modal__overlay'>
    <div class='modal__inner'>
      <h2 class='modal__title'>My Profile</h2>
      <div class='modal__body'>
        <section class='modal__section'>
          <h3 class='modal__section-heading'>My Students</h3>
          <span class='modal__section__cta btn-plus'>+</span>
          <ul>
            {{#each studentLabels as |studentLabel|}}
              <li>{{studentLabel.nickname}}</li>
            {{/each}}
          </ul>
        </section>
      </div>
    </div>
    <button {{action 'toggleProfile'}}>Close</button>
  </div>
{{/if}}
