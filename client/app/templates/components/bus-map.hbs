{{mapbox-tiles}}

{{#if showingNotificationRadius }}
  {{notification-radius home=user}}
{{/if}}

{{simple-marker object=user iconClass='home-marker'}}

{{#each schools as |school|}}
  {{simple-marker object=school iconClass='school-marker'}}
{{/each}}

{{#each buses as |bus|}}
  {{bus-marker model=bus}}
  {{bus-trail model=bus}}
{{/each}}

<div class='bus-map__controls'>
  <div class='bus-map__controls__group'>
    <a {{action 'zoomIn'}} title={{t 'actions.zoomIn'}} class='bus-map__controls__button bus-map__controls__button--grouped-top' href='#'>
      {{fa-icon 'plus'}}
    </a>
    <a {{action 'zoomOut'}} title={{t 'actions.zoomOut'}} class='bus-map__controls__button bus-map__controls__button--grouped-bottom' href='#'>
      {{fa-icon 'minus'}}
    </a>
  </div>

  <div class='bus-map__controls__group {{if isTrackingBuses 'bus-map__controls__group--disabled'}}'>
    <a {{action 'enableTracking'}} title={{t 'actions.follow'}} class='bus-map__controls__button' href='#'>
      {{fa-icon 'crosshairs'}}
    </a>
  </div>
</div>

