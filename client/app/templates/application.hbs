{{#if session.isAuthenticated}}
  <div class='main__outer--map-view'>

    {{outlet}}

  </div>

{{else if districts.current}}
  <div class='main__outer--page-view'>
    <div class='main__inner--page-view'>


      <div class='main__content'>
        <div class='logo'>Schoolbot</div>

        <div class='intro__district-logo'>
          <img src={{districts.current.logoUrl}} alt={{districts.current.name}}>
        </div>
          <h2 class='heading--district'>Presented by {{districts.current.name}}</h2>

        {{locale-picker}}

        {{outlet}}

      </div>
    </div>
  </div>

{{else}}

  {{outlet}}

{{/if}}
