<div class='main'>
  <div class='main__content'>
    <div class='logo'>Schoolbot</div>

    {{#if districts.current}}
      <h2>Welcome to {{districts.current.name}}</h2>
    {{/if}}

    {{locale-picker}}

    {{#if session.isAuthenticated}}
      <a href="#" {{action 'signOut'}}>Sign Out</a>
    {{else}}
      {{#link-to 'sign-in'}}Sign In{{/link-to}}
    {{/if}}

    {{outlet}}

  </div>
</div>
