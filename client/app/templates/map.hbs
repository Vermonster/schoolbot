<div class='main__outer--map-view'>
  {{bus-map user=currentUser buses=uniqueBuses schools=uniqueSchools}}

  {{outlet}}

  {{#unless isOnline}}
    <div class='msg msg--map'>
      {{fa-icon 'warning'}}
      <h3 class='msg__content' role='alert'>{{t 'map.messages.connection'}}</h3>
    </div>
  {{else}}
    {{#unless showingAllStudents}}
      <div class='msg msg--map'>
        {{fa-icon 'warning'}}
        <h3 class='msg__content' role='alert'>{{t 'map.messages.missingStudents'}}</h3>
      </div>
    {{/unless}}
  {{/unless}}

  <div class='menu'>
    {{#link-to 'map.settings' replace=true tagName='button' class='btn--settings'}}
      {{fa-icon 'user'}}
      <span class='btn--settings__text'>{{ t 'settings.title' }}</span>
    {{/link-to}}

    {{#link-to 'map.help' replace=true tagName='button' class='btn--help'}}
      {{fa-icon 'question-circle'}}
      <span class='btn--help__text'>{{ t 'help.title' }}</span>
    {{/link-to}}
  </div>
</div>
